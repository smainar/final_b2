<h1>Course Index:</h1>

<% @courses.each do |course| %>
  <section id="course-<%= course.id %>">
    <h3><%= course.name %></h3>
      <% course.sort_by_grade.each do |student_course| %>
        <ul>
          <li>Student: <%= student_course.student.name %>, Grade: <%= student_course.grade.round(2) %></li>
        </ul>
      <% end %>
  </section>
<% end %>
